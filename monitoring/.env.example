# Monitoring & Observability Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# GRAFANA CONFIGURATION
# ============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_in_production

# ============================================================================
# ALERTMANAGER NOTIFICATION CHANNELS
# ============================================================================

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# PagerDuty Integration (for critical alerts)
PAGERDUTY_URL=https://events.pagerduty.com/v2/enqueue
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# Custom Webhook (optional)
WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Email Notifications (SMTP)
SMTP_USER=alerts@aviladevops.com.br
SMTP_PASSWORD=your-smtp-password

# ============================================================================
# DATABASE CREDENTIALS (for exporters)
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# ============================================================================
# REDIS CREDENTIALS (for exporters)
# ============================================================================
REDIS_PASSWORD=
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================================================
# CELERY CONFIGURATION (for Flower)
# ============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
FLOWER_USER=admin
FLOWER_PASSWORD=change_me_in_production

# ============================================================================
# SERVICE IDENTIFICATION
# ============================================================================
SERVICE_NAME=aviladevops-saas
ENVIRONMENT=production  # or development, staging
VERSION=1.0.0

# ============================================================================
# PROMETHEUS RETENTION
# ============================================================================
PROMETHEUS_RETENTION_TIME=30d

# ============================================================================
# ELASTICSEARCH CONFIGURATION
# ============================================================================
ES_JAVA_OPTS=-Xms1g -Xmx1g

# ============================================================================
# LOGSTASH CONFIGURATION
# ============================================================================
LS_JAVA_OPTS=-Xms512m -Xmx512m

# ============================================================================
# MONITORING NETWORK
# ============================================================================
# The monitoring stack will create its own network and connect to the main saas-network
# Ensure saas-network exists before starting monitoring stack
