{
  "dashboard": {
    "title": "Business KPIs - √Åvila DevOps SaaS",
    "tags": ["saas", "business", "kpis"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Active Users",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "saas:users:active_total",
            "legendFormat": "Active Users"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "orientation": "horizontal"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "User Registrations (24h)",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "saas:users:registrations:rate24h",
            "legendFormat": "New Users"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Monthly Recurring Revenue (MRR)",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(saas:revenue:mrr) by (tenant)",
            "legendFormat": "{{tenant}}"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyBRL",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 4,
        "title": "Conversion Rate (%)",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "avg(saas:conversion:rate)",
            "legendFormat": "Conversion"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 2, "color": "yellow"},
                {"value": 5, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "User Registration Trend",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "increase(saas_user_registrations_total[1h])",
            "legendFormat": "Registrations per hour"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Users"},
          {"format": "short", "show": false}
        ]
      },
      {
        "id": 6,
        "title": "User Login Activity",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "rate(saas_user_logins_total[5m]) * 60",
            "legendFormat": "Logins per minute"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Logins/min"},
          {"format": "short", "show": false}
        ]
      },
      {
        "id": 7,
        "title": "Revenue by Tenant",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14},
        "targets": [
          {
            "expr": "saas:revenue:total",
            "legendFormat": "{{tenant}}"
          }
        ],
        "options": {
          "displayMode": "gradient",
          "orientation": "horizontal",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "currencyBRL",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 8,
        "title": "Churn Rate Trend",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14},
        "targets": [
          {
            "expr": "saas:users:churn_rate",
            "legendFormat": "Churn Rate"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Churn %"},
          {"format": "short", "show": false}
        ],
        "thresholds": [
          {"value": 5, "colorMode": "warning", "op": "gt", "fill": true, "line": true}
        ]
      },
      {
        "id": 9,
        "title": "Active Users by Tenant",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 22},
        "targets": [
          {
            "expr": "saas_active_users_total",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Payment Success Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 22},
        "targets": [
          {
            "expr": "(sum(rate(saas_payment_successful_total[5m])) / sum(rate(saas_payment_attempts_total[5m]))) * 100",
            "legendFormat": "Success Rate"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Success %", "min": 0, "max": 100},
          {"format": "short", "show": false}
        ],
        "thresholds": [
          {"value": 90, "colorMode": "critical", "op": "lt", "fill": true, "line": true}
        ]
      }
    ],
    "refresh": "1m",
    "schemaVersion": 27,
    "version": 1
  }
}
