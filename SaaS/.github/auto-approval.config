# ðŸ¤– Configuracao do Sistema de Aprovacao Automatica
# Sistema Machine Learning para GitHub Copilot

# ATIVACAO DO SISTEMA
AUTO_APPROVAL_ENABLED=true

# CONFIGURACOES DE SCORE (Machine Learning)
HIGH_CONFIDENCE_THRESHOLD=150    # Auto-aprovacao + merge automatico
MEDIUM_CONFIDENCE_THRESHOLD=120  # Apenas auto-aprovacao
MANUAL_REVIEW_THRESHOLD=80       # Abaixo disso = revisao manual

# APROVACAO AUTOMATICA PARA COPILOT
COPILOT_AUTO_APPROVE=true        # Sempre aprovar PRs do Copilot se score >= 120
COPILOT_AUTO_MERGE=true          # Auto-merge se score >= 150

# CONFIGURACOES DE SEGURANCA
ALLOW_DANGEROUS_FILES=false      # Bloquear arquivos .env, secrets, etc.
REQUIRE_TESTS=false              # Exigir arquivos de teste
REQUIRE_DOCS=false               # Exigir documentacao

# NOTIFICACOES
NOTIFY_AUTO_APPROVAL=true        # Comentar quando auto-aprovar
NOTIFY_MANUAL_REVIEW=true        # Comentar quando precisar revisao manual
MENTION_USERS=["aviladevs"]      # Usuarios para mencionar

# INTEGRACAO COM GITHUB ACTIONS
TRIGGER_ON_PR_OPEN=true          # Executar quando PR for aberto
TRIGGER_ON_PR_UPDATE=true        # Executar quando PR for atualizado
TRIGGER_ON_REVIEW=true           # Executar apos reviews

# MACHINE LEARNING FEATURES
LEARNING_MODE=true               # Coletar dados para melhorar IA
CONFIDENCE_ADJUSTMENT=true       # Ajustar confianca baseado em historico
PATTERN_RECOGNITION=true         # Reconhecer padroes de qualidade

# STATUS ATUAL
SYSTEM_STATUS=ACTIVE             # Sistema ativo e funcionando
LAST_UPDATE=2025-01-04           # Ultima atualizacao
VERSION=1.0.0                    # Versao do sistema