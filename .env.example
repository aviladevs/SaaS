# Ávila DevOps SaaS - Environment Configuration
# Arquivo de exemplo para configuração de ambiente

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# Configurações básicas do Django
DEBUG=False
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production-minimum-50-characters
DJANGO_SETTINGS_MODULE=core.settings

# Allowed hosts (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1,.aviladevops.com.br

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Banco de dados principal (PostgreSQL recomendado para produção)
DATABASE_URL=postgresql://username:password@localhost:5432/aviladevops_saas

# Configuração alternativa (para desenvolvimento)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=aviladevops_saas
DB_USER=postgres
DB_PASSWORD=your-password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis para cache, sessões e filas do Celery
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_URL=redis://localhost:6379/1

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Configuração de email (Gmail recomendado para desenvolvimento)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@aviladevops.com.br

# =============================================================================
# FILE STORAGE
# =============================================================================

# Google Cloud Storage (recomendado para produção)
GS_BUCKET_NAME=your-gcs-bucket-name
GS_PROJECT_ID=your-gcp-project-id
GS_CREDENTIALS_FILE=path/to/credentials.json

# AWS S3 (alternativa)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_DEFAULT_ACL=public-read

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Configurações de segurança para produção
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_PROXY_SSL_HEADER=('HTTP_X_FORWARDED_PROTO', 'https')

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Configurações da API REST
API_RATE_LIMIT=1000/hour
API_VERSION=v1

# =============================================================================
# PAYMENT GATEWAYS
# =============================================================================

# Stripe (para pagamentos)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Mercado Pago (Brasil)
MERCADO_PAGO_ACCESS_TOKEN=your-mercado-pago-token
MERCADO_PAGO_PUBLIC_KEY=your-mercado-pago-public-key

# =============================================================================
# SOCIAL AUTHENTICATION
# =============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# =============================================================================
# MONITORING & APM
# =============================================================================

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# OpenAI (para funcionalidades de IA)
OPENAI_API_KEY=your-openai-api-key

# Firebase Cloud Messaging (notificações push)
FCM_SERVER_KEY=your-fcm-server-key

# =============================================================================
# DEVELOPMENT SETTINGS (apenas para desenvolvimento)
# =============================================================================

# Criar superusuário automaticamente
DJANGO_CREATE_SUPERUSER=false
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@aviladevops.com.br
DJANGO_SUPERUSER_PASSWORD=your-superuser-password

# Coletar arquivos estáticos automaticamente
COLLECT_STATIC=true

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Para produção, copie este arquivo para .env e ajuste os valores reais
# Nunca commite o arquivo .env com dados sensíveis no repositório

# Exemplos de configuração para produção:
# DEBUG=False
# SECRET_KEY=sk-production-secret-key-here
# DATABASE_URL=postgresql://user:pass@prod-db-host:5432/saas_prod
# REDIS_URL=redis://prod-redis-host:6379/0
